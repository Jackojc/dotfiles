    <!-- WINDOW FOCUS NEXT/PREV -->
    <keybind key="A-Tab">
      <action name="NextWindow" />
      <!-- <action name="WarpCursor" to="window" /> -->
    </keybind>

    <keybind key="A-S-Tab">
      <action name="PreviousWindow" />
      <!-- <action name="WarpCursor" to="window" /> -->
    </keybind>

    <!-- WINDOW SNAP & FILL -->
    <keybind key="W-S-bracketleft">
      <action name="ToggleSnapToRegion" region="left" />
    </keybind>

    <keybind key="W-S-bracketright">
      <action name="ToggleSnapToRegion" region="right" />
    </keybind>

    <!-- WINDOW SNAPPING TO CORNERS -->
    <keybind key="W-S-1">
      <action name="ToggleSnapToRegion" region="top-left-corner" />
      <action name="ToggleAlwaysOnTop" />
    </keybind>

    <keybind key="W-S-2">
      <action name="ToggleSnapToRegion" region="top-right-corner" />
      <action name="ToggleAlwaysOnTop" />
    </keybind>

    <keybind key="W-S-3">
      <action name="ToggleSnapToRegion" region="bottom-left-corner" />
      <action name="ToggleAlwaysOnTop" />
    </keybind>

    <keybind key="W-S-4">
      <action name="ToggleSnapToRegion" region="bottom-right-corner" />
      <action name="ToggleAlwaysOnTop" />
    </keybind>

    <!-- WINDOW MOVE TO EDGES -->
    <keybind key="W-left">
      <action name="MoveToEdge" direction="left" />
    </keybind>

    <keybind key="W-right">
      <action name="MoveToEdge" direction="right" />
    </keybind>

    <keybind key="W-up">
      <action name="MoveToEdge" direction="up" />
    </keybind>

    <keybind key="W-down">
      <action name="MoveToEdge" direction="down" />
    </keybind>

    <!-- WINDOW GROW TO EDGES -->
    <keybind key="W-S-left">
      <action name="GrowToEdge" direction="left" />
    </keybind>

    <keybind key="W-S-right">
      <action name="GrowToEdge" direction="right" />
    </keybind>

    <keybind key="W-S-up">
      <action name="GrowToEdge" direction="up" />
    </keybind>

    <keybind key="W-S-down">
      <action name="GrowToEdge" direction="down" />
    </keybind>

    <!-- WINDOW SHRINK EDGES -->
    <keybind key="W-C-left">
      <action name="ShrinkToEdge" direction="left" />
    </keybind>

    <keybind key="W-C-right">
      <action name="ShrinkToEdge" direction="right" />
    </keybind>

    <keybind key="W-C-up">
      <action name="ShrinkToEdge" direction="up" />
    </keybind>

    <keybind key="W-C-down">
      <action name="ShrinkToEdge" direction="down" />
    </keybind>

    <!-- VOLUME KEYS -->
    <keybind key="XF86_AudioLowerVolume" allowWhenLocked="yes">
      <action name="Execute" command="sh -c 'wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%- &amp;&amp; notify-volume-speaker'" />
    </keybind>

    <keybind key="XF86_AudioRaiseVolume" allowWhenLocked="yes">
      <action name="Execute" command="sh -c 'wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%+ &amp;&amp; notify-volume-speaker'" />
    </keybind>

    <keybind key="XF86_AudioMute" allowWhenLocked="yes">
      <action name="Execute" command="sh -c 'wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle &amp;&amp; notify-volume-speaker'" />
    </keybind>

    <keybind key="XF86_AudioMicMute" allowWhenLocked="yes">
      <action name="Execute" command="sh -c 'wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle &amp;&amp; notify-volume-microphone'" />
    </keybind>

    <!-- BRIGHTNESS KEYS -->
    <keybind key="XF86_MonBrightnessUp" allowWhenLocked="yes">
      <action name="Execute" command="brightnessctl set +5%" />
    </keybind>

    <keybind key="XF86_MonBrightnessDown" allowWhenLocked="yes">
      <action name="Execute" command="brightnessctl set 5%-" />
    </keybind>

    <!-- MEDIA KEYS -->
    <keybind key="XF86_AudioMedia" allowWhenLocked="yes">
      <action name="Execute" command="playerctl play-pause" />
    </keybind>

    <keybind key="XF86_AudioPlay" allowWhenLocked="yes">
      <action name="Execute" command="playerctl play-pause" />
    </keybind>

    <keybind key="XF86_AudioNext" allowWhenLocked="yes">
      <action name="Execute" command="playerctl next" />
    </keybind>

    <keybind key="XF86_AudioPrev" allowWhenLocked="yes">
      <action name="Execute" command="playerctl previous" />
    </keybind>

  </keyboard>

  <mouse>
    <doubleClickTime>1</doubleClickTime>

    <context name="Frame">  <!-- WINDOW + DECORATIONS -->
      <!-- MOVE & RESIZE -->
      <mousebind button="W-Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Move" />
      </mousebind>

      <mousebind button="W-Right" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Resize" />
      </mousebind>

      <!-- SCROLL RESIZE -->
			<mousebind direction="W-Down" action="Scroll">
        <action name="Focus" />
        <action name="Raise" />
				<action name="ResizeRelative" left="-16%" right="-16%" top="-9%" bottom="-9%" />
			</mousebind>

			<mousebind direction="W-Up" action="Scroll">
        <action name="Focus" />
        <action name="Raise" />
				<action name="ResizeRelative" left="16%" right="16%" top="9%" bottom="9%" />
			</mousebind>
    </context>

    <context name="Client">
      <mousebind button="Left" action="Press">
        <action name="Focus" />
        <action name="Raise" />
      </mousebind>

      <mousebind button="Middle" action="Press">
        <action name="Focus" />
        <action name="Raise" />
      </mousebind>

      <mousebind button="Right" action="Press">
        <action name="Focus" />
        <action name="Raise" />
      </mousebind>
    </context>

    <context name="TitleBar">  <!-- ENTIRE WINDOW DECORATION -->
      <!-- FOCUS -->
      <mousebind button="Left" action="Press">
        <action name="Focus" />
        <action name="Raise" />
      </mousebind>

      <mousebind button="Middle" action="Press">
        <action name="Focus" />
        <action name="Raise" />
      </mousebind>

      <mousebind button="Right" action="Press">
        <action name="Focus" />
        <action name="Raise" />
      </mousebind>

      <!-- SHADE -->
      <mousebind direction="Up" action="Scroll">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Shade" />
      </mousebind>

      <mousebind direction="Down" action="Scroll">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Unshade" />
      </mousebind>
    </context>

    <context name="Title">  <!-- WINDOW TITLE + BLANK SPACE (NOT INCLUDING BUTTONS) -->
      <mousebind button="Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Move" />
      </mousebind>

      <mousebind button="Right" action="Click">
        <action name="Focus" />
        <action name="Raise" />
        <action name="ShowMenu" menu="client-menu" />
      </mousebind>
    </context>

    <context name="Desktop">  <!-- AKA ROOT -->
      <!-- SHOW ROOT MENU -->
      <mousebind button="Right" action="Click">
        <action name="Unfocus" />
        <action name="ShowMenu" menu="root-menu" />
      </mousebind>

      <!-- UNFOCUS WINDOWS WHEN CLICKING DESKTOP -->
      <mousebind button="Left" action="Press">
        <action name="Unfocus" />
      </mousebind>
    </context>

    <!-- RESIZE SIDES -->
    <context name="Top">
      <mousebind button="Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Resize" />
      </mousebind>
    </context>

    <context name="Left">
      <mousebind button="Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Resize" />
      </mousebind>
    </context>

    <context name="Right">
      <mousebind button="Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Resize" />
      </mousebind>
    </context>

    <context name="Bottom">
      <mousebind button="Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Resize" />
      </mousebind>
    </context>

    <!-- RESIZE CORNERS -->
    <context name="TRCorner">
      <mousebind button="Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Resize" />
      </mousebind>
    </context>

    <context name="BRCorner">
      <mousebind button="Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Resize" />
      </mousebind>
    </context>

    <context name="TLCorner">
      <mousebind button="Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Resize" />
      </mousebind>
    </context>

    <context name="BLCorner">
      <mousebind button="Left" action="Drag">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Resize" />
      </mousebind>
    </context>

    <!-- WINDOW BUTTONS -->
    <context name="Maximize">
      <mousebind button="Left" action="Click">
        <action name="Focus" />
        <action name="Raise" />
        <action name="ToggleMaximize" />
      </mousebind>
    </context>

    <context name="WindowMenu">
      <mousebind button="Left" action="Click">
        <action name="Focus" />
        <action name="Raise" />
        <action name="ShowMenu" menu="client-menu" atCursor="no" />
      </mousebind>
    </context>

    <context name="Icon">
      <mousebind button="Right" action="Click">
        <action name="Focus" />
        <action name="Raise" />
        <action name="ShowMenu" menu="client-menu" atCursor="no" />
      </mousebind>
    </context>

    <context name="Shade">
      <mousebind button="Left" action="Click">
        <action name="Focus" />
        <action name="Raise" />
        <action name="ToggleShade" />
      </mousebind>
    </context>

    <context name="AllDesktops">
      <mousebind button="Left" action="Click">
        <action name="Focus" />
        <action name="Raise" />
        <action name="ToggleOmnipresent" />
      </mousebind>
    </context>

    <context name="Iconify">
      <mousebind button="Left" action="Click">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Iconify" />
      </mousebind>
    </context>

    <context name="Close">
      <mousebind button="Left" action="Click">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Close" />
      </mousebind>
    </context>

  </mouse>

</labwc_config>
